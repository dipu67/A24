<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nav</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html,
        body {
            width: 100%;
            height: 100%;
        }

        nav {
            background-color: gray;
            width: 100%;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 10px;
            overflow: hidden;
        }

        #leftNav {
            width: 50px;
            height: 100%;
            border-radius: 50%;
            overflow: hidden;

        }

        #leftNav a img {
            height: 100%;
            object-fit: contain;
            object-position: center;

        }

        #rightNav ul {
            display: flex;
            align-items: center;
            gap: 5px;
        }

        #rightNav ul li {
            list-style: none;
            /* background-color: red; */

        }

        #rightNav ul li a {

            text-decoration: none;
            font-size: 30px;
            color: black;
            padding: 100% 10px;
        }

        #rightNav ul li a:hover {
            background-color: rgba(0, 128, 0, 0.397);
            backdrop-filter: blur(5px);
        }

        i {
            font-size: 40px;
            font-weight: 400;
            cursor: pointer;
            display: none;
            color: black;
        }

        @media screen and (max-width: 600px) {
            nav {
                overflow: visible;
                transition: all 2s ease-out;
            }

            #rightNav {
                position: absolute;
                display: none;
                height: calc(100% - 50px);
                ;
                width: 60%;
                background-color: rgba(255, 255, 255, 0.418);
                backdrop-filter: blur(5px);
                top: 50px;
                right: 0px;
            }

            #rightNav ul {
                /* display: none; */
                display: flex;
                flex-direction: column;

            }

            #rightNav ul li {
                /* display: none; */
                display: flex;
                flex-direction: column;

            }

            #rightNav ul li a {
                font-size: 30px;
                color: black;
                padding: 10px 15px;

            }

            #rightNav ul li a:hover {
                background-color: rgba(0, 128, 0, 0.397);
                backdrop-filter: blur(5px);
            }


            i {
                display: block;
            }
        }
    </style>

<body>
    <nav id="nav">
        <div id="leftNav">
            <a href="/">

                <img src="/images/logo.jpg" alt="A24">
            </a>

        </div>

        <div id="rightNav">
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">Airdrops</a></li>
                <li><a href="/post">Post </a></li>
                <li><a href="#">Chat </a></li>
                <li><a href="#">More Soon</a></li>
            </ul>
        </div>
        <i class="ri-menu-line"></i>
    </nav>

    <script>
        const nav = document.querySelector('#rightNav')
        const icon = document.querySelector('i')
        let toogle = true
        icon.addEventListener('click', () => {
            if (toogle === true) {
                nav.style.display = 'block'
                toogle = false
            } else if (toogle === false) {
                nav.style.display = 'none'
                toogle = true

            }

        })
    </script>
</body>

</html>